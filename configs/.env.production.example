# Production Environment Configuration
# Copy this file to .env.production
# NEVER commit .env.production with real secrets!

# Application
APPLICATION_NAME=starter-kit
APPLICATION_URL=https://your-domain.com
APPLICATION_DOMAIN=https://your-domain.com
VERSION=1.0.0
IP=0.0.0.0
HTTP_PORT=8000

# Database (Production Database)
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_TIMEOUT=10000
ENABLE_SEEDS=0

# Logging
LOG_LEVEL=info
ENABLE_PRETTY_LOG=0
ENABLE_COLORIZED_LOG=0
ENABLE_DB_LOGGING=0
ENABLE_REQUEST_LOGGING=1
ENABLE_RESPONSE_LOGGING_BODY=0
ENABLE_DEVELOPER_MESSAGE=0
ENABLE_PERSISTENCE_FORCE_LOGGING=1
ENABLE_DEBUG=0

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Security (USE STRONG SECRETS IN PRODUCTION!)
ENCRYPTION_KEY=your_production_encryption_key_32_chars_min!!
JWT_ACCESS_TOKEN_SECRET=your_production_access_token_secret
JWT_REFRESH_TOKEN_SECRET=your_production_refresh_token_secret
JWT_ACCESS_TOKEN_EXPIRATION_TIME=15m
JWT_REFRESH_TOKEN_EXPIRATION_TIME=30d

# Docker Compose
COMPOSE_PROJECT_NAME=production_deployment

# Timeouts
REQUEST_TIMEOUT=30000
SHUTDOWN_TIMEOUT=10000
