# Test Environment Configuration
# Copy this file to .env.test and fill in your test values
# This file is used ONLY when ENV_NAME=test

# Application
APPLICATION_NAME=starter-kit-test
APPLICATION_URL=http://localhost:8001
APPLICATION_DOMAIN=http://localhost:8001
VERSION=test
IP=127.0.0.1
HTTP_PORT=8001

# Database (Test Database - separate from development)
DATABASE_URL=postgresql://test_user:test_password@localhost:5434/test_db
DATABASE_TIMEOUT=5000
ENABLE_SEEDS=0

# Logging
LOG_LEVEL=error
ENABLE_PRETTY_LOG=0
ENABLE_COLORIZED_LOG=0
ENABLE_DB_LOGGING=0
ENABLE_REQUEST_LOGGING=0
ENABLE_RESPONSE_LOGGING_BODY=0
ENABLE_DEVELOPER_MESSAGE=0
ENABLE_PERSISTENCE_FORCE_LOGGING=0
ENABLE_DEBUG=0

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_TIME_WINDOW=60000

# Security (Test secrets - use different values in production!)
ENCRYPTION_KEY=test_encryption_key_32_chars_long!!
JWT_ACCESS_TOKEN_SECRET=test_access_token_secret_key_32ch!
JWT_REFRESH_TOKEN_SECRET=test_refresh_token_secret_key_32!
JWT_ACCESS_TOKEN_EXPIRATION_TIME=15m
JWT_REFRESH_TOKEN_EXPIRATION_TIME=30d

# Docker Compose
COMPOSE_PROJECT_NAME=test_deployment

# Timeouts
REQUEST_TIMEOUT=30000
SHUTDOWN_TIMEOUT=5000
